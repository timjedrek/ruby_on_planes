<nav class="bg-blue-600 shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path, class: "text-white font-bold text-xl" do %>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
              </svg>
              <span>Flight School Finder</span>
            </div>
          <% end %>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
          <!-- Navigation Links -->
          <div class="px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-blue-500">
            <%= link_to "Featured Flight Schools", "#", class: "text-white hover:text-white" %>
          </div>
          
          <div class="relative group">
            <%= link_to "Find School By State", states_path, class: "px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-blue-500" %>
          </div>
          
          <div class="px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-blue-500">
            <%= link_to "Find School By City", "#", class: "text-white hover:text-white" %>
          </div>
          
          <div class="px-3 py-2 rounded-md text-sm font-medium text-white hover:bg-blue-500">
            <%= link_to "Airports", airports_path, class: "text-white hover:text-white" %>
          </div>
        </div>
      </div>
      
      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <div class="ml-3 relative">
          <% if user_signed_in? %>
            <div class="flex items-center space-x-4">
              <span class="text-white"><%= current_user.email %></span>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-white hover:bg-gray-100 focus:outline-none" %>
            </div>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-white hover:bg-gray-100 focus:outline-none" %>
          <% end %>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-white hover:bg-blue-500 focus:outline-none" aria-expanded="false">
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="mobile-menu hidden sm:hidden bg-blue-700">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%= link_to "Featured Flight Schools", "#", class: "block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-blue-500" %>
      <%= link_to "Find School By State", states_path, class: "block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-blue-500" %>
      <%= link_to "Find School By City", "#", class: "block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-blue-500" %>
      <%= link_to "Airports", airports_path, class: "block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-blue-500" %>
    </div>
    
    <div class="pt-4 pb-3 border-t border-blue-500">
      <div class="flex items-center px-5">
        <% if user_signed_in? %>
          <div class="space-y-2">
            <div class="text-white text-sm font-medium"><%= current_user.email %></div>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-white hover:bg-gray-100 focus:outline-none" %>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "block px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-white hover:bg-gray-100 focus:outline-none" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script> 