<div class="bg-blue-900 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold text-white text-center">Review <%= @school.name %></h1>
    <p class="mt-4 text-xl text-blue-200 text-center max-w-3xl mx-auto">
      Share your experience with this flight school to help future students
    </p>
  </div>
</div>

<div class="max-w-3xl mx-auto px-4 py-12">
  <div class="bg-white rounded-lg shadow-md p-8">
    <%= form_with(model: [@school.airport, @school, @review], local: true, class: "space-y-6") do |form| %>
      <% if @review.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">There <%= @review.errors.count == 1 ? 'is' : 'are' %> <%= @review.errors.count %> <%= @review.errors.count == 1 ? 'error' : 'errors' %> with your review:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @review.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Rating</label>
        <div class="flex items-center" id="rating-stars">
          <% 5.times do |i| %>
            <button type="button" class="star-btn w-10 h-10 focus:outline-none" data-value="<%= i+1 %>">
              <svg class="w-10 h-10 <%= i == 0 ? 'text-yellow-400' : 'text-gray-300' %> transition-colors" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </button>
          <% end %>
          <%= form.hidden_field :rating, value: 1 %>
        </div>
      </div>

      <div>
        <%= form.label :title, "Review Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Summarize your experience" %>
      </div>

      <div>
        <%= form.label :comment, "Your Review", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :comment, rows: 5, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Share details about your experience at this flight school" %>
        <p class="mt-1 text-sm text-gray-500">Your review should be at least 20 characters.</p>
      </div>

      <% unless user_signed_in? %>
        <div class="bg-blue-50 p-4 rounded-md">
          <h3 class="text-lg font-medium text-blue-800 mb-2">Submitting as a guest</h3>
          <p class="text-blue-700 text-sm mb-4">Please provide your contact information:</p>
          
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <%= form.label :reviewer_name, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :reviewer_name, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
            
            <div>
              <%= form.label :reviewer_email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.email_field :reviewer_email, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
          
          <p class="mt-4 text-sm text-blue-700">
            <span class="inline-flex mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>
            Create an account to manage your reviews and receive notifications.
            <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-800 font-medium hover:underline" %>
          </p>
        </div>
      <% end %>

      <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <p class="ml-3 text-sm text-gray-600">
            I confirm this review is based on my own personal experience and that I alone am responsible for the comments made in this review. I accept that Flight School Finder, in its sole discretion, has the right to not publish this review or later remove it from the website for any reason.
          </p>
        </div>
      </div>

      <div class="flex justify-end">
        <%= link_to "Cancel", airport_school_path(@school.airport.code, @school), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mr-3" %>
        <%= form.submit "Submit Review", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.star-btn');
    const ratingInput = document.querySelector('#review_rating');
    
    stars.forEach(star => {
      star.addEventListener('click', function() {
        const value = parseInt(this.getAttribute('data-value'));
        ratingInput.value = value;
        
        // Update star colors
        stars.forEach((s, index) => {
          if (index < value) {
            s.querySelector('svg').classList.add('text-yellow-400');
            s.querySelector('svg').classList.remove('text-gray-300');
          } else {
            s.querySelector('svg').classList.remove('text-yellow-400');
            s.querySelector('svg').classList.add('text-gray-300');
          }
        });
      });
      
      // Add hover effect
      star.addEventListener('mouseenter', function() {
        const value = parseInt(this.getAttribute('data-value'));
        
        stars.forEach((s, index) => {
          if (index < value) {
            s.querySelector('svg').classList.add('text-yellow-400');
            s.querySelector('svg').classList.remove('text-gray-300');
          }
        });
      });
      
      star.addEventListener('mouseleave', function() {
        const selectedValue = parseInt(ratingInput.value);
        
        stars.forEach((s, index) => {
          if (index < selectedValue) {
            s.querySelector('svg').classList.add('text-yellow-400');
            s.querySelector('svg').classList.remove('text-gray-300');
          } else {
            s.querySelector('svg').classList.remove('text-yellow-400');
            s.querySelector('svg').classList.add('text-gray-300');
          }
        });
      });
    });
  });
</script> 