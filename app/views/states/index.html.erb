<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-gray-900 mb-6">Flight Schools by State</h1>

  <% if @states.any? %>
    <ul class="space-y-4">
      <% @states.each do |state| %>
        <li class="bg-white rounded-lg shadow-sm p-4 border border-gray-100">
          <%= link_to state.name, state_path(state.abbreviation), class: "text-blue-600 hover:text-blue-800 hover:underline font-medium text-lg" %>
          <span class="text-gray-500 text-sm ml-1">(<%= state.abbreviation %>)</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600 text-lg">No states listed yet.</p>
  <% end %>
</div>