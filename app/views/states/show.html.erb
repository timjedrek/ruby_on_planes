<div class="max-w-4xl mx-auto px-4 py-8">
  <% if flash[:alert] %>
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= flash[:alert] %></span>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= flash[:notice] %></span>
    </div>
  <% end %>

  <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @state.name %> (<%= @state.abbreviation %>)</h1>

  <div class="mb-8 flex space-x-4">
    <%= link_to "Back to All States", states_path, class: "inline-block bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-700 transition duration-200" %>
    <%= link_to "Add New City", new_state_city_path(@state.abbreviation), class: "inline-block bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200" %>
  </div>

  <% if @cities.any? %>
    <h2 class="text-2xl font-semibold text-gray-800 mb-4 border-b-2 border-gray-200 pb-2">Cities in <%= @state.name %></h2>
    <ul class="space-y-4">
      <% @cities.each do |city| %>
        <li class="bg-white rounded-lg shadow-sm p-4 border border-gray-100">
          <%= link_to city.name, state_city_path(@state.abbreviation, city.name), class: "text-blue-600 hover:text-blue-800 hover:underline font-medium text-lg" %>
          <% if city.airports.any? %>
            <ul class="mt-2 space-y-2 pl-4">
              <% city.airports.order(:name).each do |airport| %>
                <li class="text-gray-700 text-sm">
                  <%= link_to airport.name, airport_path(airport.code), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                  <% if airport.icao_code.present? %>
                    <span class="text-gray-500">(<%= airport.icao_code %>)</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-gray-500 italic text-sm mt-2">No airports listed yet for <%= city.name %>.</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No cities listed yet for <%= @state.name %>.</p>
  <% end %>

  <% airports = @state.airports.order(:name).distinct %>
  <% if airports.any? %>
    <h2 class="text-2xl font-semibold text-gray-800 mt-8 mb-4 border-b-2 border-gray-200 pb-2">Airports in <%= @state.name %></h2>
    <ul class="space-y-4">
      <% airports.each do |airport| %>
        <li class="bg-white rounded-lg shadow-sm p-4 border border-gray-100">
          <div class="flex items-center justify-between">
            <div>
              <%= link_to airport.name, airport_path(airport.code), class: "text-blue-600 hover:text-blue-800 hover:underline font-medium text-lg" %>
              <% if airport.icao_code.present? %>
                <span class="text-gray-500 text-sm ml-1">(<%= airport.icao_code %>)</span>
              <% end %>
            </div>
          </div>
          <p class="text-gray-600 text-sm">In: <%= link_to airport.city.name, state_city_path(@state.abbreviation, airport.city.name), class: "text-blue-600 hover:text-blue-800" %></p>
          <% if airport.schools.any? %>
            <ul class="mt-2 space-y-2 pl-4">
              <% airport.schools.order(:name).each do |school| %>
                <li class="text-gray-700 text-sm">
                  <%= link_to school.name, airport_school_path(airport.code, school), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                  <% if school.featured %>
                    <span class="inline-block bg-yellow-400 text-gray-800 text-sm font-semibold px-2 py-1 rounded-full ml-2">Featured</span>
                  <% end %>
                  <% if school.training_types.any? %>
                    <span class="text-gray-600 ml-2">Training: <%= school.training_types.join(", ").capitalize %></span>
                  <% end %>
                  <% if school.part_141 || school.part_61 %>
                    <span class="ml-2">(<%= [school.part_141 ? "Part 141" : nil, school.part_61 ? "Part 61" : nil].compact.join(", ") %>)</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600 mt-8">No airports listed yet for <%= @state.name %>.</p>
  <% end %>
</div>