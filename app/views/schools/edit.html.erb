<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-gray-900 mb-2">Edit <%= @school.name %></h1>
  <p class="text-lg text-gray-600 mb-6">
    At <%= @airport.name %> (<%= @airport.code %>)
  </p>

  <div class="mb-8">
    <%= link_to "Back to School", airport_school_path(@airport.code, @school), class: "inline-block bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-700 transition duration-200" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
    <%= render 'form' %>
  </div>
</div> 